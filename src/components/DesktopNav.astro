---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/shop", label: "Shop" },
  { href: "/table", label: "table" },
];
---

<nav
  class="hidden lg:flex items-center gap-1"
  role="navigation"
  aria-label="Main navigation"
>
  {
    navLinks.map((link) => (
      <a
        href={link.href}
        class="px-3 py-2 text-sm font-medium hover:bg-gray-100 rounded transition-colors"
      >
        {link.label}
      </a>
    ))
  }
</nav>
